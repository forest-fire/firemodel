{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "ES6",
    "lib": [
      "es2015",
      "esnext.asynciterable",
      "es2015.reflect"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./lib",
    "removeComments": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*-spec.ts",
    "test/testing/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
